rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Grant universal, unconditional public read access to all documents.
      // This is the definitive fix for the "Missing or insufficient permissions" error.
      allow read: if true;
      
      // Require authentication for all write operations for basic security.
      allow write: if request.auth != null;
    }
  }
}
