rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================
    // VIDEOS - COMPLETELY PUBLIC READ (NO RESTRICTIONS)
    // This MUST come first to avoid any override conflicts
    // ============================================================
    match /videos/{videoId} {
      // Allow ANYONE (even without auth) to list or get videos
      allow get, list: if true;
      
      // Secure writes (only artist or Cloud Functions can create/update)
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.artistId;
      allow update: if true; // Allows Cloud Functions to update
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.artistId;
    }

    // ============================================================
    // USERS - PUBLIC READ
    // ============================================================
    match /users/{userId} {
      allow get, list: if true;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.walletAddress;
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.walletAddress;
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.walletAddress;
    }

    // ============================================================
    // TIPS - PUBLIC READ, SECURE CREATE
    // ============================================================
    match /tips/{tipId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.fromWallet;
    }

    // ============================================================
    // BOOKINGS - PUBLIC LIST, RESTRICTED GET
    // ============================================================
    match /bookings/{bookingId} {
      allow list: if true;
      allow get: if request.auth != null 
                 && (request.auth.uid == resource.data.businessId 
                     || request.auth.uid == resource.data.artistId);
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.businessId;
      allow update: if true; // For Cloud Functions
    }

    // ============================================================
    // ADOPTIONS - PUBLIC LIST, RESTRICTED GET
    // ============================================================
    match /adoptions/{adoptionId} {
      allow list: if true;
      allow get: if request.auth != null 
                 && (request.auth.uid == resource.data.businessId 
                     || request.auth.uid == resource.data.artistId);
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.businessId;
      allow update: if true; // For Cloud Functions
    }

    // ============================================================
    // GOSSIP POSTS - PUBLIC READ
    // ============================================================
    match /gossip_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.authorWallet;
      allow update: if true; // For comment counts
    }

    // ============================================================
    // GOSSIP COMMENTS - PUBLIC READ
    // ============================================================
    match /gossip_comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.authorWallet;
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.authorWallet;
    }

    // ============================================================
    // PRIVATE MESSAGES - RESTRICTED TO PARTICIPANTS
    // ============================================================
    match /gossip_messages/{messageId} {
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.fromWallet 
                      || request.auth.uid == resource.data.toWallet);
      allow list: if request.auth != null 
                  && (request.auth.uid == resource.data.fromWallet 
                      || request.auth.uid == resource.data.toWallet);
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.fromWallet;
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.fromWallet;
    }

    // ============================================================
    // MARKETPLACE - PUBLIC READ
    // ============================================================
    match /marketplace_products/{productId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.sellerWallet;
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.sellerWallet;
    }

    match /marketplace_orders/{orderId} {
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.buyerWallet 
                      || request.auth.uid == resource.data.sellerWallet);
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.buyerWallet;
      allow update: if true; // For Cloud Functions
    }

    // ============================================================
    // ALLOW ALL OTHER COLLECTIONS (Default fallback)
    // ============================================================
    match /{document=**} {
      allow read, write: if true;
    }
  }
}