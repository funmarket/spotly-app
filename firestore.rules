rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Grant read access to all documents if the user is authenticated (including anonymous).
      allow read: if request.auth != null;
      
      // Require authentication for all write operations (create, update, delete).
      allow write: if request.auth != null;
    }
  }
}
